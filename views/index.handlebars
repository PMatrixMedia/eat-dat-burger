<main>
    <h1 class="display-1">Eat Dat burger</h1>
    <div class="container"
         <div class="row">
             <div class=".col-md"
              <h2 class="display-2">New Burgers</h2>
               {{#each burgers}}
               {{#unless this.devoured}}
              <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                      <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
              </form>
              </div>
             {{/unless}}
        {{/each}}
      </div>
       <div class="col md">
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
    <h3 class="display-3">Burgers to be Devoured</h3>
    <div class="row">
    <div class="col md">
        <form class="create-form" action="/burgers" method="POST">
            <div class="form-group">
                <label for="ca">Burger Ingredients:</label>
                <input type="text" id="ca" name="Burger_name">
            </div>
            <button type="submit">Add Burger</button>
        </form>
      </div>
    </div>
<h4 class="display-4">New Burgers</h4>
    
    
